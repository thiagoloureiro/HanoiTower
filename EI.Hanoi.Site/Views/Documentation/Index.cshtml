@{
    ViewBag.Title = "Easyinvest - API Documentation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    html, body {
        width: 100%;
        height: 100%;
    }

    .game {
        background-image: url('../../Assets/Images/bg.png');
        width: 646px;
        height: 190px;
        margin-bottom: 20px;
    }

    .tower {
        width: 215px;
        /*border: 1px dotted black;*/
        float: left;
        height: 190px;
        display: table-cell;
        position: relative;
        vertical-align: bottom;
    }

    .disk {
        height: 40px;
        margin: 0px auto;
        opacity: 0.8;
        border-radius: 5px 5px;
        border: 1px solid black;
    }

        .disk.small {
            width: 45px;
        }

        .disk.medium {
            width: 100px;
        }

        .disk.large {
            width: 155px;
        }

    .bg-red {
        background-color: red;
    }

    .bg-blue {
        background-color: lightblue;
    }

    .bg-green {
        background-color: green;
    }

    .organizer {
        height: 0px;
        border: 0px;
    }
</style>

<nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/home">HanoiTower</a>
        </div>
    </div>
</nav>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
            <div class="list-group" style="padding:10px">
                <a href="/home" class="list-group-item active">Novo Jogo</a>
                <a href="/documentation" class="list-group-item">API Documentation</a>
                <a href="#" class="list-group-item" onclick="ResetGames();">Reset All games</a>
            </div>
        </div>

        <div style="display:inline-table; padding:30px;">

            <div class="container">
                <table class="ui celled table">
                    <thead>
                        <tr>
                            <th>API</th>
                            <th>Descrição</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td><a href="#">GET api/game</a></td>
                            <td>Inicia um novo jogo com padrão de três discos</td>
                        </tr>
                        <tr>
                            <td><a href="#">GET api/gamereset</a></td>
                            <td>Reseta os dados de todos os jogos</td>
                        </tr>
                        <tr>
                            <td><a href="#">GET api/game/{gameId}</a></td>
                            <td>Obtem as movimentações dos discos do respectivo jogo pelo seu ID</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>